FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

#include        "include/initialConditions_uniform"

internalField   uniform $omegaInlet;

boundaryField
{
    buildings
    {
        type            zeroGradient;
    }
    upstream1700m
    {
        type            zeroGradient;
    }
    "outlet_.*"
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    "inlet_.*"
    {
        type            fixedValue;
        value           $internalField;
    }
    "side.*"
    {
        type            slip;
    }
    
    top
    {
        type            slip;
    }
    "bottom.*"
    {
        type            omegaWallFunction;
        value           $internalField;
    }
}


